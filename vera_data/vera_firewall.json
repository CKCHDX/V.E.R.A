{
  "metadata": {
    "version": "1.0",
    "purpose": "Safety rules to prevent dangerous operations",
    "last_updated": "2026-01-12"
  },
  "blacklisted_commands": [
    "format",
    "diskpart",
    "cipher /w",
    "del /s /q",
    "rm -rf /",
    "mkfs",
    "dd",
    "chmod 777 /",
    "chown -R",
    "reboot",
    "shutdown /f"
  ],
  "protected_paths": {
    "windows": [
      "C:\\Windows\\System32",
      "C:\\Windows\\SysWOW64",
      "C:\\Program Files",
      "C:\\Program Files (x86)",
      "C:\\ProgramData",
      "C:\\$Recycle.Bin"
    ],
    "linux": [
      "/bin",
      "/sbin",
      "/usr/bin",
      "/usr/sbin",
      "/etc",
      "/root",
      "/sys",
      "/proc",
      "/dev",
      "/boot"
    ]
  },
  "dangerous_patterns": [
    {
      "pattern": ".*\\beval\\b.*",
      "reason": "Code injection risk"
    },
    {
      "pattern": ".*\\bexec\\b.*",
      "reason": "Arbitrary code execution"
    },
    {
      "pattern": ".*__import__.*",
      "reason": "Module injection"
    },
    {
      "pattern": ".*subprocess.*vera.*",
      "reason": "Self-modification attempt"
    },
    {
      "pattern": ".*open\\(.*vera.*w.*",
      "reason": "Self-modification attempt"
    }
  ],
  "self_protection": {
    "protect_vera_code": true,
    "protect_vera_data": true,
    "protect_firewall_rules": true,
    "prevent_self_modification": true,
    "prevent_admin_escalation": true
  },
  "execution_limits": {
    "max_timeout": 30,
    "max_output_size": 50000,
    "max_concurrent_commands": 1
  },
  "logging": {
    "enabled": true,
    "log_file": "logs/vera_access.log",
    "log_all_commands": true,
    "log_blocked_attempts": true
  }
}